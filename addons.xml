<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repo.chakra" name="Chakravyu's XBMC Addons" version="1.0.0" provider-name="Cherian Mathew (chakravyu)">
  <extension point="xbmc.addon.repository" name="Chakravyu' XBMC Addon Repository">
    <info compressed="false">https://github.com/chakravyu/repository.xbmc.chakra/raw/master/addons.xml</info>
    <checksum>https://github.com/chakravyu/repository.xbmc.chakra/raw/master/addons.xml.md5</checksum>
    <datadir zip="true">https://github.com/chakravyu/repository.xbmc.chakra/raw/master/</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Install chakravyu's Addons</summary>
    <description>Download and install addons by chakravyu</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="plugin.video.nfdc" name="NFDC" version="1.0.0" provider-name="Cherian Mathew (chakravyu)">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8" />
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language></language>
    <summary>NFDC(India)</summary>
    <description>Addon for watching free online movies produced by the National Film Development Corporation made available via their Cinemas of India</description>
  </extension>
</addon>
</addons>
